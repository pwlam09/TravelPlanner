<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/tripWrapper"
    android:background="@drawable/activity_item_selector">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/activity_icon"
        android:layout_gravity="center_vertical" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/tvWrapper">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/activity_name"
            android:layout_gravity="center_vertical|center_horizontal|start"
            android:textAlignment="center"
            android:gravity="center_vertical"
            android:textSize="18sp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/activity_sDate"
                android:textAlignment="center"
                android:gravity="center_horizontal"
                android:layout_weight="1" />

            <TextView
                android:text=" - "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/dateTime_holder"
                android:layout_weight="1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/activity_eDate"
                android:textAlignment="center"
                android:gravity="center_horizontal"
                android:layout_weight="1" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/activity_expense"
            android:layout_gravity="center_vertical|center_horizontal|start"
            android:textAlignment="center"
            android:gravity="center_vertical" />
    </LinearLayout>
</LinearLayout>